<% layout("layouts/boilerplate") %>

<div class="row justify-content-center">
  <div class="col-md-6">

    <h2 class="mb-4">Create New Listing</h2>

    <form method="POST" action="/listings/add" class="needs-validation" novalidate>

      <div class="mb-3">
        <label class="form-label">Title</label>
        <input type="text" class="form-control" name="list[title]" >
        <div class="invalid-feedback">
          Title is required.
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" name="list[description]" required>
        <div class="invalid-feedback">
          Description is required.
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label">Image URL</label>
        <input type="url" class="form-control" name="list[image]" required>
        <div class="invalid-feedback">
          Please enter a valid URL.
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label">Price</label>
        <input type="number" class="form-control" name="list[price]" min="1" required>
        <div class="invalid-feedback">
          Price must be greater than 0.
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label">Location</label>
        <input type="text" class="form-control" name="list[location]" required>
        <div class="invalid-feedback">
          Location is required.
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label">Country</label>
        <input type="text" class="form-control" name="list[country]" required>
        <div class="invalid-feedback">
          Country is required.
        </div>
      </div>

      <button class="btn btn-primary w-100">
        Submit
      </button>

    </form>

  </div>
</div>
